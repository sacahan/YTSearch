# YouTube crawler configuration
YOUTUBE_BASE_URL=https://www.youtube.com/results
YOUTUBE_TIMEOUT=10

# Redis cache configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=3
REDIS_PASSWORD=
REDIS_ENABLED=true
REDIS_TTL_SECONDS=3600

# API server configuration
API_HOST=0.0.0.0
API_PORT=8000
API_LOG_LEVEL=info

# Logging configuration
LOG_DIR=logs
LOG_FILE_ENABLED=true
LOG_FILE_MAX_BYTES=10485760
LOG_FILE_BACKUP_COUNT=5

# MCP (Model Context Protocol) Configuration
# 搜尋工具超時時間（秒，預設 15 秒）
MCP_SEARCH_TIMEOUT=15
# 搜尋工具重試次數（預設 3 次）
MCP_SEARCH_RETRIES=3

# Feature flags
ENABLE_CACHE=true
ENABLE_LOGGING=true

# Audio download configuration
DOWNLOAD_DIR=output
DOWNLOAD_BASE_URL=http://localhost:8000/downloads
DOWNLOAD_TIMEOUT=300
MAX_VIDEO_DURATION=600
AUDIO_BITRATE=128
CACHE_TTL_HOURS=24

# Rate limiting configuration
RATE_LIMIT_DOWNLOAD_PER_HOUR=20
RATE_LIMIT_STATIC_PER_MINUTE=60
RATE_LIMIT_ENABLED=true
